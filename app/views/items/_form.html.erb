<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="wrapper-sign-up">
        <h2 class="text-center">Item Details</h2>

        <%= simple_form_for [current_user, @item] do |f| %>
          <%= f.input :title %>
          <%= f.input :item_type, collection: Item.item_types.keys %>
          <%= f.input :price %>
          <%= f.input :description %>
          <%= f.input :condition, collection: Item.conditions.keys %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <h5 class="delete-item"> Delete Item ?
          <%= link_to "delete", user_item_path(current_user,@item), method: :delete, data: {confirm: "Are you sure?"}  %>
          </h5>
          <%= f.button :submit, class:"sign-up-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
