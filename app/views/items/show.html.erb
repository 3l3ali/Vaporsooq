<div class="item-wrapper">
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div >
      <% if @item.photo.present? %>
          <%= cl_image_tag @item.photo, class:"item-photo" %>
        <% end %>
      </div>
    </div>

      <div class="col-xs-12 col-md-6">
        <h1 class="item_name text-center"><%= @item.title %></h1>
        <hr>
        <div class="attr">
          <h3 class="item-attr">Type: <%= @item.item_type %> </h3>
          <h3 class="item-attr">Condition: <%= @item.condition %> </h3>
          <h3 class="item-attr">Price: <%= @item.price.to_f / 100 %> JD </h3>
        </div>

        <div class="description">
          <ul class="tabs" role="tablist">
            <li role="presentation" class="active"><a href="#description_item" aria-controls="description_item" role="tab" data-toggle="tab">Following</a></li>
            <li role="presentation"><a href="#user_info" aria-controls="user_info" role="tab" data-toggle="tab">user_info</a></li>
          </ul>
        </div>

        <!-- Tab panes -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="description_item">item desc</div>
          <div role="tabpanel" class="tab-pane" id="user_info">user info</div>
        </div>

